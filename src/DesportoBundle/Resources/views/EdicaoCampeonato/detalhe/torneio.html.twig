{% block mainpanel %}
    <div class="pageheader">
        <div class="media">
            <div class="pageicon pull-left">
                <i class="fa fa-th-list"></i>
            </div>
            <div class="media-body">
                <ul class="breadcrumb">
                    <li><a href="{{ path('index') }}"><i class="glyphicon glyphicon-home"></i></a></li>
                    <li><a href="#">Campeonatos</a></li>
                    <li>Detalhe Campeonato</li>
                </ul>
                <h4>{{ campeonato.campeonato.nome }} - {{ campeonato.edicao }}</h4>
            </div>
        </div><!-- media -->
    </div><!-- pageheader -->
    <div class="contentpanel">

        <div class="row">
            <div class="col-sm-12">
                <div class="pull-right">
                    <a href=""><button class="btn btn-success " type="button"><i class="fa fa-print"></i>&nbsp;&nbsp;<span class="bold">Tabela</span></button></a>
                    <a href=""><button class="btn btn-success " type="button"><i class="fa fa-calendar-o"></i>&nbsp;&nbsp;<span class="bold">Gerar Carnê</span></button></a>
                    <a href="{{ path('campeonato_convocacao', {campeonato: campeonato.id}) }}"><button class="btn btn-success " type="button"><i class="fa fa-users"></i>&nbsp;&nbsp;<span class="bold">Editar Equipes</span></button></a>
                    <a href=""><button class="btn btn-success " type="button"><i class="fa fa-bars"></i>&nbsp;&nbsp;<span class="bold">Ficha Equipe</span></button></a>
                    <a href="campeonato-finais.html"><button class="btn btn-success " type="button"><i class="fa fa-share"></i>&nbsp;&nbsp;<span class="bold">Próxima Fase</span></button></a>
                </div>
            </div>
        </div>
        
        <hr/>

        <div class="row">
            <div class="col-sm-12">
                
                <h5 class="lg-title mb10">Fases</h5>

                <!-- Nav tabs -->
                <ul class="nav nav-tabs">
{#                    {% for fase in campeonato.fasesClassificatorias %}
                    {% endfor %}
#}
                    <li class="active"><a href="#quartas" data-toggle="tab"><strong>Qaurtas</strong></a></li>
                </ul>

                
                <div class="tab-content mb30">
                    <div class="tab-pane active" id="quartas">
                        {% for fase in campeonato.fasesClassificatorias %}
                            
                            {% include 'DesportoBundle::EdicaoCampeonato/detalhe/fase.html.twig' with {'fase': fase} %}
                            
                        {% endfor %}
                    </div><!-- tab-pane -->
                </div><!-- tab-content -->
                
            </div>
        </div> <!-- row -->
    </div><!-- contentpanel -->
{% endblock %}
