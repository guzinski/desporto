<div class="row text-center mb10 mt10">
    <div class="col-xs-6 text-right">
        {% if jogo.data is null %}
            Não definido
        {% else %}
            <h5><strong>{{ jogo.data.format("d/m/Y") }} {{ jogo.horario.format("H:i") }}</strong></h5>
        {% endif %}
    </div>
    <div class="col-xs-6 text-left">
        {% if jogo.local is null %}
            Não definido
        {% else %}
            <h5><strong>{{ jogo.local }}</strong></h5>
        {% endif %}
    </div>
</div>
<div class="row text-center mb10 mt10">

    <div class="col-xs-4 text-right">
        <span class="h4">{{ jogo.equipeMandante.apelido }}
    </div>
    <div class="col-xs-4">
        <span class="h3">{{ jogo.numeroGolsMandante }}</span>
        <span class="h4">X</span>
        <span class="h3">{{ jogo.numeroGolsVisitante }}</span>
    </div>
    <div class="col-xs-4 text-left">
        <span  class="h4">{{ jogo.equipeVisitante.apelido }}</span>
    </div>    

</div>
