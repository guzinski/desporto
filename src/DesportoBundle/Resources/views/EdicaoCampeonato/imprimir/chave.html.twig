{% extends "DesportoBundle::layoutPrint.html.twig" %}
{% block title %}Desporto | Classificação {{ campeonato.campeonato.nome }} - {{ campeonato.edicao }}{% endblock %}
{% block mainpanel %}
<div class="row">
    <div class="col-sm-12">
        <h2>Classificação {{ campeonato.campeonato.nome }} - {{ campeonato.edicao }}</h2>
    </div>
</div>
    <hr/>
<div class="row">
    <div class="col-sm-12">
        {% for tabelaChave in tabela %}
            <div class="row" style="page-break-inside: avoid;">
                <div class="col-sm-12">
                    <div  >
                        <span class="h3">Chave {{ loop.index }}</span>
                        <hr/>
                        {% include 'DesportoBundle::EdicaoCampeonato/detalhe/tabela.html.twig' with {'tabela': tabelaChave} %}
                    </div>
                </div>
            </div>
                    <br/><br/>
        {% endfor %}
    </div>
</div>
{% endblock %}