
<div class="panel panel-default">
    <div class="panel-heading">
        <h4 class="panel-title">
            {{ jogo.edicaoCampeonato.campeonato.nome }} {{ jogo.edicaoCampeonato.edicao }} - {{ jogo.rodada ? jogo.rodada.numero ~ "º Rodada" }} ({{ jogo.equipeMandante.apelido }} X {{ jogo.equipeVisitante.apelido }})
        </h4>
    </div>
    <div class="panel-body nopadding">
        <form id="formData" class="form-horizontal form-bordered">
            <div class="form-group">
                <label class="col-sm-5 col-md-4 col-lg-3 control-label">Data</label>
                <div class="col-sm-7 col-md-8 col-lg-5">
                    <input required="" value="{{ jogo.data ? jogo.data.format('d/m/Y') : "" }}" placeholder="{{ hoje.format('d/m/Y') }}" id="data" name="data" class="form-control" type="text">
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-5 col-md-4 col-lg-3 control-label">Horário</label>
                <div class="col-sm-7 col-md-8 col-lg-5">
                    <input required=""  value="{{ jogo.data ?  jogo.data.format('H:i') : "" }}" placeholder="16:00" class="form-control" id="horario" name="horario" type="text">
                </div>
            </div>
                <input type="hidden" name="jogo" id="jogo" value="{{ jogo.id }}" />
        </form>
    </div>
</div>
